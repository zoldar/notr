{
    "compileOnSave": true,
    "compilerOptions": {
        "lib": [
            "ESNext",
            "DOM"
        ],
        "moduleResolution": "nodenext",
        "module": "ESNext",
        "target": "es2018",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./build",
        "sourceMap": true,
        "strict": true
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules"
    ]
}